@{
    Layout = "../Shared/_Admin.cshtml";
}
<section class="content-header">
    <h1>
        Mailbox
        <small>13 new messages</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Mailbox</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        <form action="../Admin/AddQuestions" class="form-horizontal" role="form" style="border:double; border-color:aqua" method="post">

            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Class: </label>
                <div class="col-lg-3 ">
                    <select id="ClassSelector" name="category">

                        <option>9th</option>
                        <option>10th</option>
                        <option>1st Year</option>
                        <option>2nd Year</option>

                    </select>
                </div>
            </div><div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Subject: </label>
                <div class="col-lg-3 ">
                    <select id="SubjectSelector" name="category">

                        <option>Physics</option>
                        <option>Chemistry</option>
                        <option>Biology</option>
                        <option>Mathematics</option>

                    </select>
                </div>
            </div><div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Chapter: </label>
                <div class="col-lg-3 ">
                    <select id="SubjectSelector" name="category">

                        <option>Introduction to .....</option>
                        <option>Application of the .....</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Main Topic: </label>
                <div class="col-lg-3 ">
                    <select id="MainTopicSelector" name="maintopic">

                        <option>Introduction to .....</option>
                        <option>Application of the .....</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">No of Questions: </label>
                <div class="col-lg-3 ">
                    <input type="text" placeholder="No of Questions" name="noOfq" value="" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div><!-- /.row -->
</section><!-- /.content -->
