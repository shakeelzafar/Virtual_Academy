
@{
    Layout = "../Shared/_Admin.cshtml";
}
<section class="content-header">
    <h1>
        Mailbox
        <small>13 new messages</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Mailbox</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        <form action="~/Admin/Add_Class" class="form-horizontal" role="form" style="border:double; border-color:aqua" method="post">

            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Class: </label>
                <div class="col-lg-3 ">
                    <input type="text" placeholder="Class" id="Class" name="Class" />
                </div>
                <div id="result" class="col-lg-4">
                </div>
            </div>
            
            @Scripts.Render("~/bundles/jquery")
            <script>

                $(document).ready(function () {
                   
                    $('#checking').hide();

                    $('#Class').change(function () {
                        var Email = $('#Class').val();
                        alert('User Name = ' + Email);
                        
                        $.getJSON("/Admin/CheckClassName?Name="+Email, function (data) {
                            $('#checking').hide();
                            if (data) {
                                $('#result').text("Class already exists in database");
                                $('#butt').hide();
                            }
                            else {
                                $('#result').text("Class Name is available");
                                $('#butt').show();
                            }
                        });

                    });

                });
            </script>


            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Description: </label>
                <div class="col-lg-3 ">
                    <textarea  placeholder="Description" id="desc" name="Description" ></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Submit" class="btn btn-default" id="butt" />
                </div>
            </div>
        </form>
    </div><!-- /.row -->
</section><!-- /.content -->
