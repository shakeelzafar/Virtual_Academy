
@{
    Layout = "../Shared/_Admin.cshtml";
}
<section class="content-header">
    <h1>
        Mailbox
        <small>13 new messages</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Mailbox</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">

        <form action="~/Admin/Add_Product" class="form-horizontal" role="form" style="border:double; border-color:aqua" method="post">

            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Class: </label>
                <div class="col-lg-3 ">
                    <select id="ClassSelector" name="Class">

                        <option>9th</option>
                        <option>10th</option>
                        <option>1st Year</option>
                        <option>2nd Year</option>

                    </select>
                </div>
            </div><div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Subject: </label>
                <div class="col-lg-3 ">
                    <select id="SubjectSelector" name="Subject">

                        <option>Physics</option>
                        <option>Chemistry</option>
                        <option>Biology</option>
                        <option>Mathematics</option>

                    </select>
                </div>
            </div><div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Chapter: </label>
                <div class="col-lg-3 ">
                    <select id="ChapterSelector" name="Chapter">

                        <option>Matrices and Determinants </option>
                        <option>Application of the .....</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>
                        <option>Study of Maths</option>
                        <option>Study of Physics</option>

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label" style="font-size:20px">Main Topic: </label>
                <div class="col-lg-3 ">
                    <input type="text" placeholder="Topics" name="MainTopic" id="MainTopic"  />
                </div>
                <div class="col-lg-3 " id="result">
                    </div>
                </div>

            @Scripts.Render("~/bundles/jquery")
            <script>

                $(document).ready(function () {
                    $('#MainTopic').change(function () {
                        var Email = $('#MainTopic').val();
                        alert('User Name = ' + Email);

                        $.getJSON("/Admin/CheckMainTopicName?Name=" + Email + "&Chapter_Name=" + $("#ChapterSelector").val() + "&Subject_Name=" + $("#SubjectSelector").val() + "&Class_Name=" + $("#ClassSelector").val(), function (data) {
                            $('#checking').hide();
                            if (data) {
                                $('#result').text("Chapter already exists in database");
                                $('#butt').hide();
                            }
                            else {
                                $('#result').text("Chapter Name is available");
                                $('#butt').show();
                            }
                        });

                    });

                });
            </script>
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <input type="submit" value="Submit" id="butt" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div><!-- /.row -->
</section><!-- /.content -->




