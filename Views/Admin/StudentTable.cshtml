@using Test_MVC.Models;
@{
    Layout = "../Shared/_Admin.cshtml";

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Data Tables
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
        <li class="active">User tables</li>
        <li class="active">Chapter tables</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="content-header">

        <div class="">
            <!-- ViewBag.title
            Query....get all content of that title...and from its child class as well but just
            -->
            <h3 class="">Class</h3>
        </div><!-- /.box-header -->
        <div style=" margin-right:8%">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr style="">
                        <th style="width: auto; text-align: center">Name</th>
                        <th style="width: auto; text-align: center">Email</th>
                        <th style="width: auto; text-align: center">Contact No</th>
                        <th style="width: auto; text-align: center">Country</th>

                        <th style="width: auto; text-align: center">Update</th>
                        <th style="width: auto; text-align: center">View</th>
                        <th style="width: auto; text-align: center">Delete </th>
                    </tr>
                </thead>
                <tbody>

                    @{List<UserProfile> list = new db().UserProfile.Where(x => x.Type == "Student").ToList();
                    foreach (var v in list)
                    {

                        <tr>
                            <td style="text-align: center">@v.UserName</td>
                            <td style="text-align: center">@v.Email</td>
                            <td style="text-align: center">@v.ContactNo</td>
                            <td style="text-align: center">@v.Country</td>
                            <td class="fa fa-edit" style="margin-left: 15%; background-color: lightblue"><a href="~/Admin/UpdateUser/@v.UserId">&nbsp;&nbsp;Edit</a></td>
                            <td class="fa fa-edit" style="margin-left: 15%; background-color: lightblue"><a href="~/Admin/Detail_Of_Student/@v.UserId">&nbsp;&nbsp;View All</a></td>
                            <td class="fa fa-remove" style="margin-left:15%;  background-color:lightblue; text-align:center"><a href="~/Admin/DeleteUser/@v.UserId">&nbsp; Delete</a></td>
                        </tr>
                    }
                    }
                </tbody>
                <tfoot>
                    <tr style="">
                        <th style="width: 30%; text-align: center">Class</th>
                        <th style="width: 30%; text-align: center">Capters</th>
                        <th style="width: 10%; text-align: center">Update</th>
                        <th style="width: 10%; text-align: center">View</th>
                        <th style="width: 10%; text-align: center">Delete </th>
                    </tr>
                </tfoot>
            </table>


        </div><!-- /.col -->

    </div><!-- /.row -->
</section><!-- /.content -->
