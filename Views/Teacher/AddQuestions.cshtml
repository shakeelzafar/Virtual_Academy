@model Test_MVC.Models.SubjectClass
<div id="content_wrapper" class="content single">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar-page rmm taxlist graphite">

                    <span class="sidebar-title" style="display: block;">Features</span>
                    <ul id="menu-formget-features" class="rmm-main-list" style="display: block;">

                        

                    </ul>
                </div>

            </div>

            <div class="col-md-7">
                <div id="">


                    <div>
                        <br />
                        <ul style="list-style:none; ">
                            <li> <b>Course: &nbsp;</b>@Model.Subject.Name &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;  &nbsp; &nbsp; &nbsp;  &nbsp; &nbsp; &nbsp; Quiz No:</li>
                            <li> <b>Instructor: &nbsp;</b></li>
                        </ul>
                    </div>
                    
                    <div class="panel panel-success" style="">
                        
                        <br/><br />
                        <div class="panel-heading">
                            <span style="" id="childOfCooCoo"><b>Session</b></span>
                        </div>

                        <div class="panel-body" style="padding:0px">

                            <form action="../../Teacher/AddClassQuiz/@Model.SubClassId" class="form-horizontal" role="form" method="post">
                                <select class="col-lg-12" name="ChapterName">
                                    @foreach (var chap in Model.Chapter)
                                    {
                                        <option id="kookoo" value="@chap.Name">Chapter- @chap.ChapterNo @chap.Name</option>
                                    }
                                </select>
                                @for(int i=0; i<2; i++)
                                { 
                                <div class="panel panel-warning" style="">
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="control-label col-lg-2" for="questions">Question  @i:</label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control" name="QuestionNo" placeholder="Write your question here." required></textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-lg-2" for="optionA">Option A:</label>
                                            <div class="col-lg-4">
                                                <input type="text" class="form-control" name="Option_A" placeholder=" enter option a" required />
                                            </div>

                                            <label class="control-label col-lg-2" for="optionB">option B:</label>
                                            <div class="col-lg-4">
                                                <input type="text" class="form-control" name="Option_B" placeholder=" enter option b" required />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-lg-2" for="optionC">option C:</label>
                                            <div class="col-lg-4">
                                                <input type="text" class="form-control" name="Option_C" placeholder="Enter Option C" required />
                                            </div>

                                            <label class="control-label col-lg-2" for="optionD">option D:</label>
                                            <div class="col-lg-4">
                                                <input type="text" class="form-control" name="Option_D" placeholder="Enter Option D" required />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-lg-2 " for="correctOption">Correct:</label>
                                            <div class="col-lg-4">
                                                <input type="text" class="form-control" name="Correct" placeholder="Enter Correct Option" required />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                }
                              
                                <div>
                                    <input type="submit" value="Submit Quiz" class="btn btn-danger" style="margin-left:; margin-top:5px; margin-bottom:5px" />
                                </div>
                            </form>
                        </div>
                    </div>


                </div>
            </div>

            <!--            <div class="col-md-3 col-sm-4">-->
            <!--            </div> -->

        </div>
    </div>
</div>



